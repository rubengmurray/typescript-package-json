{
	"name": "typescript-package-json",
	"displayName": "Typescript Package.JSON",
	"description": "Set the VSCode TypeScript version based on the nearest package.json, traversing up the directory tree: designed for multiple repository workspaces",
	"publisher": "rubengmurray",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"license": "MIT",
	"categories": [
		"Other",
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:typescript"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "typescript-package-json.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"build": "rm -rf dist && tsc"
	},
	"devDependencies": {
		"@types/glob": "7.2.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "5.9.1",
		"@typescript-eslint/parser": "5.9.1",
		"@vscode/test-electron": "2.0.3",
		"glob": "7.2.0",
		"ts-loader": "9.2.6",
		"typescript": "4.5.5",
		"webpack": "5.66.0",
		"webpack-cli": "4.9.1"
	},
	"dependencies": {
		"husky": "4.3.0"
	}
}
